@model CoreLMS.Web.Areas.Admin.Pages.Authors.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add an Author</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
