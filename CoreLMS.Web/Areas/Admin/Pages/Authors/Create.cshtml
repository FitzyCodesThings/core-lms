                <span asp-validation-for="AuthorDto.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorDto.MiddleName" class="control-label"></label>
                <input asp-for="AuthorDto.MiddleName" class="form-control" />
                <span asp-validation-for="AuthorDto.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorDto.LastName" class="control-label"></label>
                <input asp-for="AuthorDto.LastName" class="form-control" />
                <span asp-validation-for="AuthorDto.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorDto.Suffix" class="control-label"></label>
                <input asp-for="AuthorDto.Suffix" class="form-control" />
                <span asp-validation-for="AuthorDto.Suffix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorDto.ContactEmail" class="control-label"></label>
