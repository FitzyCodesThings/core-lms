            </div>
            <div class="form-group">
                <label asp-for="AuthorDto.Description" class="control-label"></label>
                <input asp-for="AuthorDto.Description" class="form-control" />
                <span asp-validation-for="AuthorDto.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorDto.WebsiteURL" class="control-label"></label>
                <input asp-for="AuthorDto.WebsiteURL" class="form-control" />
                <span asp-validation-for="AuthorDto.WebsiteURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
