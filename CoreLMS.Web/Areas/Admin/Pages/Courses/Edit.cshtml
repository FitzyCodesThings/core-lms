@page
@model CoreLMS.Web.Areas.Admin.Pages.Courses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseDto.Id" />            
            <div class="form-group">
                <label asp-for="CourseDto.Name" class="control-label"></label>
                <input asp-for="CourseDto.Name" class="form-control" />
                <span asp-validation-for="CourseDto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDto.Description" class="control-label"></label>
                <input asp-for="CourseDto.Description" class="form-control" />
                <span asp-validation-for="CourseDto.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDto.CourseType" class="control-label"></label>
                <select asp-for="CourseDto.CourseType" asp-items="Html.GetEnumSelectList<CourseType>()" class="form-control"></select>
                <span asp-validation-for="CourseDto.CourseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDto.CourseImageURL" class="control-label"></label>
                <input asp-for="CourseDto.CourseImageURL" class="form-control" />
                <span asp-validation-for="CourseDto.CourseImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
